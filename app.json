{
  "expo": {
    "name": "Pitchmi",
    "slug": "pitchmi",
    "scheme": "pitchmi",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f9fcfd"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "app.pitchmi",
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Pitchmi necesita acceder a tu galería para que puedas subir imágenes.",
        "NSCameraUsageDescription": "Pitchmi necesita acceso a la cámara para tomar fotos.",
        "NSLocationWhenInUseUsageDescription": "Pitchmi usa tu ubicación para mostrar planes cercanos."
      },
      "config": {
        "googleMapsApiKey": "TU_IOS_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "package": "app.pitchmi",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f9fcfd"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "TU_ANDROID_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "plugins": [
      [
        "sentry-expo",
        {
          "dsn": "https://TU_DSN",
          "enableInDevelopment": true
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "TU_PROJECT_ID"
      }
    }
  }
}
